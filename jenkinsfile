pipeline {
    agent any
    environment {
    PATH = "/opt/apache-maven-3.9.5/bin:$PATH"
    }
    stages {
        stage("clone code") {
            steps {
                git "https://github.com/Neethanm123/maven-nxt.git"
            }
        }
        stage ("build code"){
            steps {
           sh "mvn clean install"
            }
          }
        stage ("s3_upload"){
            steps {
                sh "aws s3 cp /var/lib/jenkins/workspace/mavenpipeline s3://s3bucketneeta/ --recursive"
            }
        stage ("DEV_deploy"){
            steps {
            sshagent(['deploy_user']) {
              sh "scp -o sticthostkeychecking=no webapp/target.war ec2-user@54.234.141.74:/opt/apache-tomcat-9.0.82/webapps
               }
             }
        }
    }
}
